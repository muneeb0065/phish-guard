{
    "manifest_version": 3,
    "name": "PhishGuard Content Scanner",
    "version": "1.0",
    "description": "Scans links inside emails and webpages for phishing.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Scan Page Content"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}